<% @budgets.each do |budget| %>
  <% total = budget.amounts %>
  <% used = 0 %>
  <% budget.records.each { |record| used += record.amounts } %>
  <% leftover = total - used %>
  <%= budget.name %>
  <%= (((leftover / total.to_f) * 100).round) %>%
  total<%= budget.amounts %>
  leftover<%= leftover %>
  <%= budget.start_time.strftime("%F") %>
  <%= budget.end_time.strftime("%F") %>
  <%= link_to "Add new record", new_budget_record_path(budget) %>
<% end %>
<div class="add-link">
  <%= link_to "", new_budget_path, class:"fa-solid fa-circle-plus",style:"font-size:60px" %>
</div>
